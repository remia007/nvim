{
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "python", "go"],

  // python config
  "python.linting.enabled": true,
  "python.jediPath": "~/nvim-python3/lib/python3.8/site-packages",
  "python.linting.pylintEnabled": true,
  "python.pythonPath":"/Users/remia/.pyenv/versions/3.8.5/bin/python",
  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],
  
  // go config
  "go.goplsOptions": {
    "completeUnimported": true
  },

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  }

}
